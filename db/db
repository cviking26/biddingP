

//require Mongo Stuff
var mongo = require('mongodb');
var monk = require('monk');
var db;
var collection;

module.exports = {
	init : function(setCollection){
		if (!db) db = monk('localhost:27017/bidding');
		collection = db.get(setCollection);
	},
	getUser : function(param, callback){
		this.init('usercollection');
		param = param || {};
		collection.find(param, callback);
	}

};